<html>
	<style>
		html, body, table, td {
			margin: 0;
			padding: 0;
			font-family: Verdana;
		}

		td {
			text-align: center;
			margin: 0;
			padding: 0;
			/*background: #c00;*/
		}
		
		h3 {
			margin-top: 10mm;
			font-size: 3.5mm;
		}

		h2 {
			margin-bottom: 30mm;
		}

		h5 {
			margin-top: 10mm;
			font-size: 2mm;
		}
	</style>
	<body>
		<table>
			{% for page in paged %}
				<tr>
					{% for i in 1..8 %}
						{% if i == 5 %}</tr><tr>{% endif %}
						<td width="74mm" height="104.5mm">
							<h1>{{ get_post_meta(page[i], 'first_name', 1) }}</h1>
							<h2>{{ get_post_meta(page[i], 'last_name', 1) }}</h2>
							<br>
							{% for t in get_the_terms( page[i], 'wpep-function' ) %}
								<h3>{{ t.name }}</h3>
							{% endfor %}
						</td>
					{% endfor %}
				</tr>
				<tr>
					{% for i in 4..1 %}
						<td width="74mm" height="104.5mm">
							<barcode code="{{ get_post_meta(page[i], 'id_card_uid', 1) }}" type="EAN13" text="1" class="barcode" height="0.66">
					<h5>{{ get_post_meta(page[i], 'first_name', 1) }} {{ get_post_meta(page[i], 'last_name', 1) }}</h5>
						</td>
					{% endfor %}
					</tr><tr>
					{% for i in 8..5 %}
						<td width="74mm" height="104.5mm">
							<barcode code="{{ get_post_meta(page[i], 'id_card_uid', 1) }}" type="EAN13" text="1" class="barcode" height="0.66">
					<h5>{{ get_post_meta(page[i], 'first_name', 1) }} {{ get_post_meta(page[i], 'last_name', 1) }}</h5>
						</td>
					{% endfor %}
				</tr>
			{% endfor %}
		</table>
	</body>
</html>