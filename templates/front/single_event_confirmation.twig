<div id="wpep-event-registration">
	{% if not email %}
		<div class="ui attached error message">
			<div class="header">
				{{ __('Event Registration', 'wpep') }}
			</div>
			<p>{{ __("Please fill the registration form first. ", 'wpep') }} <a href="{{ get_permalink( the_id() ) }}?register=1">Form</a></p>
		</div>
	{% else %}
		<div class="ui attached message">
			<div class="header">
				{{ __('Event Registration', 'wpep') }}
			</div>
			<p>{{ __("You're logged in, so we can use your information.", 'wpep') }}</p>
		</div>
		<form action="{{ admin_url('admin-ajax.php') }}?action=wpep-event-confirmation" class="ui form attached segment wd-form">
			<table class="ui celled striped table">
				<tbody>
					<tr>
						<td>{{ __('E-mail', 'wpep') }}</td>
						<td>{{ email }}</td>
					</tr>
				</tbody>
			</table>
			{{ user_fields|raw }}
			{{ additional_fields|raw }}
			<button class="ui button" type="submit">{{ __('Register', 'wpep') }}</button>
			<input type="hidden" name="event_id" value="{{ event_id }}">
		</form>
	{% endif %}
</div>